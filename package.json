{
  "name": "finance-bot",
  "version": "0.1.0",
  "description": "Intelligent financial decision simulation platform",
  "type": "module",
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "npm run build && npm run test:backend",
    "test:backend": "node dist/lib/__tests__/user-state-store.test.js && node dist/lib/__tests__/audit-log.test.js && node dist/lib/__tests__/apply-action.test.js && TEST=1 node dist/src/__tests__/execute-api.test.js && node dist/lib/__tests__/simulation-engine.test.js",
    "test:rag-multi-source": "npm run build && node -r dotenv/config dist/lib/__tests__/rag-multi-source.test.js",
    "test:simulation": "npm run build && node dist/lib/__tests__/simulation-engine.test.js",
    "test:api": "npm run build && node dist/src/__tests__/api.test.js",
    "demo:agents": "npm run build && node dist/scripts/demo-langchain-agents.js",
    "demo:agents:mock": "npm run build && node dist/scripts/demo-agents-mock.js",
    "demo:e2e": "npm run build && node dist/scripts/demo-e2e-workflow.js",
    "test:model": "npm run build && node dist/scripts/test-model-config.js",
    "test:real-agents": "npm run build && node dist/scripts/test-real-agents.js",
    "test:agents": "npm run build && node dist/scripts/test-agents.js",
    "test:agents:unit": "npm run build && node dist/lib/agents/__tests__/agent-architecture.test.js",
    "list-models": "npm run build && node dist/scripts/list-models.js",
    "test:api-real": "npm run build && node dist/scripts/test-api-real.js",
    "test:chat": "npm run build && node dist/src/__tests__/chat.test.js",
    "test:chat-real": "npm run build && node dist/scripts/test-chat-real.js",
    "demo:chat": "npm run build && node dist/scripts/demo-chat.js",
    "validate": "npm run build && node dist/validate-types.js",
    "start:api": "node dist/src/server.js",
    "ingest:financial-data": "npm run build && node dist/scripts/ingest-all-financial-data.js",
    "ingest:fintextqa": "npm run build && node dist/scripts/ingest-fintextqa.js",
    "ingest:fred": "npm run build && node dist/scripts/ingest-fred-descriptions.js",
    "ingest:news": "npm run build && node dist/scripts/ingest-financial-news.js",
    "start:financial-service": "cd services/financial-data && python3 app.py"
  },
  "keywords": [
    "finance",
    "simulation",
    "decision-making",
    "hackathon"
  ],
  "dependencies": {
    "@langchain/community": "^1.1.10",
    "@langchain/core": "^0.3.0",
    "@langchain/google-genai": "^0.2.0",
    "@langchain/openai": "^0.3.0",
    "chromadb": "^3.2.2",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "js-yaml": "^4.1.0",
    "langchain": "^0.3.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
