{
  "name": "finance-bot",
  "version": "0.1.0",
  "description": "Intelligent financial decision simulation platform",
  "type": "module",
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "npm run build && node dist/lib/__tests__/simulation-engine.test.js",
    "test:allocation": "npm run build && node dist/lib/__tests__/asset-allocation.test.js",
    "test:allocation:integration": "npm run build && node dist/lib/__tests__/allocation-integration.test.js",
    "test:features": "npm run build && node dist/lib/__tests__/new-features.test.js",
    "test:features:edge": "npm run build && node dist/lib/__tests__/features-edge-cases.test.js",
    "test:simulation:edge": "npm run build && node dist/lib/__tests__/simulation-edge-cases.test.js",
    "test:recommend:edge": "npm run build && node dist/lib/__tests__/recommendation-edge-cases.test.js",
    "test:allocation:edge": "npm run build && node dist/lib/__tests__/asset-allocation-edge-cases.test.js",
    "test:edge:all": "npm run build && node dist/lib/__tests__/features-edge-cases.test.js && node dist/lib/__tests__/simulation-edge-cases.test.js && node dist/lib/__tests__/recommendation-edge-cases.test.js && node dist/lib/__tests__/asset-allocation-edge-cases.test.js",
    "test:api": "npm run build && node dist/src/__tests__/api.test.js",
    "demo:agents": "npm run build && node dist/scripts/demo-langchain-agents.js",
    "demo:agents:mock": "npm run build && node dist/scripts/demo-agents-mock.js",
    "demo:e2e": "npm run build && node dist/scripts/demo-e2e-workflow.js",
    "test:model": "npm run build && node dist/scripts/test-model-config.js",
    "test:real-agents": "npm run build && node dist/scripts/test-real-agents.js",
    "test:agents": "npm run build && node dist/scripts/test-agents.js",
    "test:agents:unit": "npm run build && node dist/lib/agents/__tests__/agent-architecture.test.js",
    "list-models": "npm run build && node dist/scripts/list-models.js",
    "test:api-real": "npm run build && node dist/scripts/test-api-real.js",
    "test:chat": "npm run build && node dist/src/__tests__/chat.test.js",
    "test:chat-real": "npm run build && node dist/scripts/test-chat-real.js",
    "demo:chat": "npm run build && node dist/scripts/demo-chat.js",
    "validate": "npm run build && node dist/validate-types.js",
    "start:api": "node dist/src/server.js",
    "start:frontend": "cd frontend && python3 -m http.server 8080"
  },
  "keywords": [
    "finance",
    "simulation",
    "decision-making",
    "hackathon"
  ],
  "dependencies": {
    "date-fns": "^3.6.0",
    "langchain": "^0.3.0",
    "@langchain/google-genai": "^0.2.0",
    "@langchain/openai": "^0.3.0",
    "@langchain/core": "^0.3.0",
    "express": "^4.19.2",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.0",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9"
  }
}